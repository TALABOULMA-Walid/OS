;*********************************************
;	Boot1.asm
;		- A Simple Bootloader
;
;	Operating Systems Development Tutorial
;*********************************************
 
org		0x7c00				; We are loaded by BIOS at 0x7C00
 
bits	16					; We are still in 16 bit Real Mode
 
start:          
	jmp loader				; jump over OEM block

;*********************************************
;	OEM Parameter block
;*********************************************

times 0Bh-$+start db 0

bpbBytesPerSector:  	DW 512
bpbSectorsPe